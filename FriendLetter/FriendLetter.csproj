<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>netcoreapp1.1</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="1.1.2" /> <!--- The first provides access to main package for ASP.NET Core. This allows us to configure our application for use on the web. -->
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="1.1.2" /> <!--- The second package provides access to special built-in classes that will help us tell our server how to handle the HTTP requests and responses required in server-side MVCs, and the request-response loop.-->
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="1.1.3" /> <!-- The third will give us access to the classes required to use the MVC architecture.-->
  </ItemGroup>
</Project>